@model IEnumerable<Logic.Dtos.StudentDto>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                First Course
            </th>
            <th>
                Second Course
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Course1))
                {
                    <span>[@Html.DisplayFor(modelItem => item.Course1Credits)]@Html.DisplayFor(modelItem => item.Course1) - @Html.DisplayFor(modelItem => item.Course1Grade)</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Course2))
                {
                    <span>[@Html.DisplayFor(modelItem => item.Course2Credits)]@Html.DisplayFor(modelItem => item.Course2) - @Html.DisplayFor(modelItem => item.Course2Grade)</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
